# Environment Variables for Tennis Stroke Detection
# Copy this file to .env and fill in your values

# Project paths (use absolute paths for better compatibility)
DATA_ROOT=/path/to/your/data
MODEL_PATH=/path/to/saved/models

# Processing options
USE_GPU=true
NUM_WORKERS=4

# Video API keys (for downloading from platforms)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Cloud storage (optional)
S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-west-2

# Logging
LOG_LEVEL=INFO
SAVE_DEBUG_VIDEOS=false
